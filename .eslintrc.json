{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "name": "next/link",
        "message": "Please import from @/navigation instead.",
        "importNames": ["default"]
      },
      {
        "name": "next/navigation",
        "message": "Please import from @/navigation instead.",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ]
      }
    ]
  }
}
